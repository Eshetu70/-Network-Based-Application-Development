<%- include('../partial/header.ejs')%>
    <main>
        <form action='/events'  method ='POST'>
        <label for="category"> Category </label> 
            <select id="category" name="category">
                <option value="category">--select category--</option>
                <option value="sport">Sport</option>
                <option value="education">Education</option>
                <option value="voluntary">Voluntary</option>
                <option value="cater">Catering</option>
                <option value="lunch">School Lunch</option>
              </select><br><br>
        <label for="title"> Title</label> 
        <input type="text" id="title" value="title" name="title" required=""> <br><br>
        <label for="hostName"> Host</label> 
        <input type="text" id="hostName" value="host Name" name="hostName" required=""> <br><br>
        <label for="details"> Details</label> 
        <input type="text" id="details" value="description" name="details" required=""> <br><br>

        <label for="location"> Where</label> 
        <input type="text" id="location" value="location" name="location" required=""> <br><br>
        <label for="startDateTime"> Start</label> 
        <input type="datetime-local" id="startDateTime" value="" name="startDateTime" required=""> <br><br>
        <label for="endDateTime"> End</label> 
        <input type="datetime-local" id="endDateTime" name="endDateTime" value="" required="" > <br><br>
        <label for="image">Image</label>
        <input type="file" id="image" name="image" required=""><br><br>
        <input type="submit" value="Submit" class="text"><br><br> <br>
         </form>
         <!-- <img src="<%= typeof image !== 'undefined'? image: ''%>"> -->
        
    </main>
    <%- include('../partial/footer.ejs')%>